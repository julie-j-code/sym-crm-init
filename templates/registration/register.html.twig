{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}


<div class="container-fluid my-5 p-5 bg-light">
    <div class="container mt-5">
        <h1 class="display-3 mb-5">Formulaire d'inscription </h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
        }) }}
        {{ form_row(registrationForm.lastName, {
        label: 'Nom de famille'
        }) }}
        {{ form_row(registrationForm.firstName, {
        label: 'Pr√©nom'
        }) }}
        {{ form_row(registrationForm.address, {
        label: 'Adresse'
        }) }}
        {{ form_row(registrationForm.cp, {
        label: 'Code Postal'
        }) }}
        {{ form_row(registrationForm.city, {
        label: 'Ville'
        }) }}
        {{ form_row(registrationForm.tel, {
        label: 'Tel'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}

    </div>
</div>
{% endblock %}