{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

<main role="main">

    <div class="container-fluid bg-light p-5 my-5">
        <div class="container mx-auto pt-5 rounded"">
            <h1 class=" display-3 mb-5">{{controller_name}} {{ user.id }}</h1>


            <table class="table">
                <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>

                    <tr>
                        <th>Tel</th>
                        <td>{{ user.tel }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Pr√©nom</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
